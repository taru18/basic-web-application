<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h3 class="text-center mb-3"><i class="fas fa-user-edit"></i>Modify your profile</h3>
                <h4 class="text-left mb-2">{{username}}</h4>
                {{>messages}}
                <form method="POST" action="/users/me/edit">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control" id="name" {{#if name}}value="{{name}}"
                            {{/if}} placeholder="Matti Meikäläinen" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                            {{#if email}}value="{{email}}" {{/if}} placeholder="user@example.com" required>
                        <small id="emailHelp" class="form-text text-muted">We do not deliver your email to any third-parties.</small>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="password"
                            required>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
                <p class="lead mt-4"><a href="/users/me">Cancel</a></p>
            </div>
        </div>
    </div>
</div>
